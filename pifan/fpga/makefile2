SHELL:=/bin/bash
TOP=top2.v
#SPISLAVE= 
#spi-slave-master/Verilog/source/SPI_Slave.v
#SPISLAVE=spi_verilog_master_slave_latest/spi_verilog_master_slave/trunk/rtl/spi_slave.v
SPISLAVE=myspi.v
SEG7=7seg.v
TIMER=timer.v

build:
	cat ${TOP} ${SPISLAVE} ${TIMER} ${SEG7} > main.v
	cp main.v /c/Users/matt/Downloads

io:
	cat iomon.v ${TIMER} ${SEG7} > main.v
	cp main.v /c/Users/matt/Downloads

veri:
	docker run -ti -v ${PWD}:/work --user $(shell id -u):$(shell id -g) verilator/verilator:latest --cc MySpi

verie:
	docker run -ti -v ${PWD}:/work --user $(shell id -u):$(shell id -g) \
    --entrypoint /bin/bash  verilator/verilator:latest
